  {
    "name": "Getting Started Example",
    "version": "1.0",
    "description": "Build an Extension!",
    "permissions": ["declarativeContent", "storage", "tabs", "<all_urls>"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "page_action": {
      "default_title": "f-icon",
      "default_popup": "popup.html",
      "default_icon": {
        "16": "image/icon.png",
        "32": "image/icon.png",
        "48": "image/icon.png",
        "128": "image/icon.png"
      }
    },
    "icons": {
      "16": "image/icon.png",
      "32": "image/icon.png",
      "48": "image/icon.png",
      "128": "image/icon.png"
    },
    "manifest_version": 2
  }